<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.geekbrains.student.cloud.storage.client.Controller">
    <VBox maxWidth="Infinity" HBox.hgrow="ALWAYS">
        <HBox>
            <Button maxWidth="Infinity" text="Добавить файл" HBox.hgrow="ALWAYS" />
            <Button maxWidth="Infinity" text="Удалить файл" HBox.hgrow="ALWAYS" />
            <Button maxWidth="Infinity" text="Отправить на сервер" HBox.hgrow="ALWAYS" />
            <Button maxWidth="Infinity" text="Обновить список" HBox.hgrow="ALWAYS" onAction="#refreshFileList" />
        </HBox>
        <HBox maxHeight="Infinity" VBox.vgrow="ALWAYS">
            <VBox maxWidth="Infinity" HBox.hgrow="ALWAYS">
                <Label alignment="CENTER" maxWidth="Infinity" text="File name" />
                <ListView fx:id="ClientFilesName" maxHeight="Infinity" maxWidth="Infinity" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" />
            </VBox>
            <VBox maxWidth="Infinity" HBox.hgrow="ALWAYS">
                <Label alignment="CENTER" maxWidth="Infinity" text="File size" />
                <ListView fx:id="ClientFilesSize" maxHeight="Infinity" maxWidth="Infinity" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" />
            </VBox>
        </HBox>
      <HBox.margin>
         <Insets right="15.0" />
      </HBox.margin>
    </VBox>
    <VBox maxWidth="Infinity" HBox.hgrow="ALWAYS">
    <HBox>
        <Button maxWidth="Infinity" text="Удалить файл" HBox.hgrow="ALWAYS" />
        <Button maxWidth="Infinity" text="Отправить на компьютер" HBox.hgrow="ALWAYS" />
    </HBox>
    <HBox maxHeight="Infinity" VBox.vgrow="ALWAYS">
        <VBox maxWidth="Infinity" HBox.hgrow="ALWAYS">
            <Label alignment="CENTER" maxWidth="Infinity" text="File name" />
            <ListView fx:id="ServerFilesName" maxHeight="Infinity" maxWidth="Infinity" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" />
        </VBox>
        <VBox maxWidth="Infinity" HBox.hgrow="ALWAYS">
            <Label alignment="CENTER" maxWidth="Infinity" text="File size" />
            <ListView fx:id="ServerFilesSize" maxHeight="Infinity" maxWidth="Infinity" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" />
        </VBox>
    </HBox>
</VBox>
</HBox>
